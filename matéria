CREATE USER "US_768377"
IDENTIFIED BY "768377"
DEFAULT TABLESPACE "TBLS5W_768377"
TEMPORARY TABLESPACE "TEMP"
PROFILE DEFAULT
ACCOUNT UNLOCK;

\\atribuir os direitos de criação
GRANT CREATE SESSION, SELECT ANY TABLE TO "US_768377";
